{
  "name": "@timur_manjosov/formatr",
  "version": "0.6.0",
  "description": "",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "build/release.wasm"
  ],
  "scripts": {
    "build": "npm run asbuild && tsup src/index.ts --dts --format cjs,esm",
    "test": "vitest run",
    "dev": "vitest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "check": "pnpm lint && pnpm test && pnpm build",
    "bench": "tsx bench/render.bench.ts",
    "examples": "tsx examples/basic.ts && tsx examples/intl.ts && tsx examples/cli-logging.ts && tsx examples/email-templates.ts && tsx examples/i18n.ts && tsx examples/form-validation.ts && tsx examples/custom-filters.ts && tsx examples/api-responses.ts",
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release",
    "asbuild": "npm run asbuild:debug && npm run asbuild:release",
    "start": "npx serve ."
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.18.2",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "assemblyscript": "^0.28.9",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  },
  "repository": "github:TimurManjosov/formatr",
  "sideEffects": false,
  "lint": "eslint . --ext .ts",
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}

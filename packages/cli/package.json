{
  "name": "@formatr/cli",
  "version": "1.0.0",
  "description": "CLI tools for the formatr template library",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "formatr": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "dev": "vitest",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "formatr",
    "cli",
    "template",
    "string-formatting"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@timur_manjosov/formatr": "file:../..",
    "chalk": "^5.4.1",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "chokidar": "^4.0.3",
    "inquirer": "^12.6.1",
    "yaml": "^2.7.1"
  }
}
